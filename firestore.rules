rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && (getUserData().role == 'admin' || request.auth.token.role == 'admin');
    }
    
    function isVendor() {
      return isAuthenticated() && (getUserData().role == 'vendor' || request.auth.token.role == 'vendor');
    }
    
    function isApprovedVendor() {
      return isVendor() && getUserData().status == 'approved';
    }
    
    // -------------------------------
    // USERS COLLECTION
    // -------------------------------
    match /users/{userId} {
      // Anyone authenticated can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can read their own data, admins can read any
      allow read: if isOwner(userId) || isAdmin();
      
      // Admins can list/query users (needed for pending vendors view)
      allow list: if isAdmin();
      
      // Users can update their own data, but cannot change role/status unless admin
      allow update: if isOwner(userId) && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status']) ||
                        isAdmin());
      
      // Only users themselves or admins can delete
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // -------------------------------
    // INSURANCE PRODUCTS COLLECTION
    // -------------------------------
    match /insurance_products/{productId} {
      // Public read access for browsing
      allow read: if true;
      
      // Only approved vendors can create products
      allow create: if isApprovedVendor() && 
                       request.resource.data.vendorId == request.auth.uid;
      
      // Vendors can only update/delete their own products, admins can do anything
      allow update, delete: if (isAuthenticated() && resource.data.vendorId == request.auth.uid) || isAdmin();
    }
    
    // -------------------------------
    // SAVED QUOTES COLLECTION
    // -------------------------------
    match /saved_quotes/{quoteId} {
      // Users can read their own saved quotes
      // Vendors can read quotes that contain their products (for analytics)
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid ||
                      (isVendor() && resource.data.vendorId == request.auth.uid));
      
      // Users can delete their own saved quotes
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create quotes for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own quotes
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // -------------------------------
    // VENDORS COLLECTION
    // -------------------------------
    match /vendors/{vendorId} {
      // Public read for vendor info
      allow read: if true;
      
      // Only the vendor themselves or admin can create/update
      allow create, update: if isOwner(vendorId) || isAdmin();
      
      // Only admin can delete vendors
     allow delete: if isAdmin();
    }
    
    // -------------------------------
    // SUBSCRIPTIONS COLLECTION
    // -------------------------------
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions, admins can read all
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only system (via Admin SDK) should write subscriptions
      // But allow authenticated users to initiate (backend validates)
      allow create, update: if isAuthenticated();
      
      allow delete: if isAdmin();
    }
    
    // -------------------------------
    // LEADS COLLECTION
    // -------------------------------
    match /leads/{leadId} {
      // Users can create leads
      allow create: if isAuthenticated();
      
      // Users can read their own leads, vendors can read leads assigned to them
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid ||
                      resource.data.vendorId == request.auth.uid ||
                      isAdmin());
      
      // Only vendor assigned to lead or admin can update
      allow update: if isAuthenticated() &&
                       (resource.data.vendorId == request.auth.uid || isAdmin());
      
      // Only lead creator or admin can delete
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // -------------------------------
    // BIDS COLLECTION
    // -------------------------------
    match /bids/{bidId} {
      // Only approved vendors can create bids
      allow create: if isApprovedVendor() &&
                       request.resource.data.vendorId == request.auth.uid;
      
      // Public read for browsing active bids
      allow read: if true;
      
      // Vendors can update/delete their own bids, admins can do anything
      allow update, delete: if (isAuthenticated() && resource.data.vendorId == request.auth.uid) || isAdmin();
    }
    
    // Default deny rule for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
